{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "baseUrl": "source",
    "lib": [
      "es2015"
    ]
  },
  "includes": [
    "source",
    "tests"
  ],
  "exclude": [
    "node_modules"
  ]
}